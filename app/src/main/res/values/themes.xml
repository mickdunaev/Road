<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Road" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- Customize your theme here. -->

        <!-- this line for overly content under status bar -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="Theme.Road.StatusBarOverlay" parent="Theme.Road">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/splash</item>
    </style>
    <style name="introTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/intro</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/intro</item>
    </style>
    <style name="Theme.Road.NumberPicker">
        <item name="android:textSize">40sp</item>
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <style name="DefaultAccentButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:background">@drawable/default_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CalendarViewTask">
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>